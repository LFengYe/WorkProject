<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="cn.guugoo.jiapeistudent.MinorActivity.CommentPayActivity">

    <cn.guugoo.jiapeistudent.Views.TitleView
        android:id="@+id/comment_pay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.guugoo.jiapeistudent.Views.TitleView>

    <LinearLayout
        android:id="@+id/pay_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/comment_pay_momey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ï¿¥125"
                    android:textColor="@color/login_color"
                    android:textSize="23sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment_pay_text1"
                        android:textSize="@dimen/comment_pay_text"
                        android:textColor="@color/text_black"/>
                    <RatingBar
                        android:id="@+id/RatingBarId1"
                        android:layout_marginLeft="20dp"
                        style="@style/MyRatingBar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:isIndicator="false"
                        android:rating="0"
                        android:numStars="5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment_pay_text2"
                        android:textSize="@dimen/comment_pay_text"
                        android:textColor="@color/text_black"/>


                    <RatingBar
                        android:id="@+id/RatingBarId2"
                        android:layout_marginLeft="20dp"
                        style="@style/MyRatingBar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:isIndicator="false"
                        android:rating="0"
                        android:numStars="5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment_pay_text3"
                        android:textSize="@dimen/comment_pay_text"
                        android:textColor="@color/text_black"/>


                    <RatingBar
                        android:id="@+id/RatingBarId3"
                        android:layout_marginLeft="20dp"
                        style="@style/MyRatingBar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:isIndicator="false"
                        android:rating="0"
                        android:numStars="5"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment_pay_text4"
                        android:textSize="@dimen/comment_pay_text"
                        android:textColor="@color/text_black"/>


                    <RatingBar
                        android:id="@+id/RatingBarId4"
                        android:layout_marginLeft="20dp"
                        style="@style/MyRatingBar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:isIndicator="false"
                        android:rating="0"
                        android:numStars="5"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size"
            android:background="@color/view_line"
            >

        </View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comment_pay_text5"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/comment_pay_text"
                    android:textColor="@color/text_black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <EditText
                    android:id="@+id/comment_pay_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/text_black"
                    android:textSize="13sp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/comment_pay_hint"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_error_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_color"
                android:textSize="22sp"
                android:text=""
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/title_back"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5.5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_line_height"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/pay_image_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weixin"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_toRightOf="@+id/pay_image_weixin"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_black_text"
                        android:text="@string/pay_text1"
                        android:textColor="@color/text_black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_gray_text"
                        android:text="@string/pay_explain1"
                        android:textColor="@color/text_gray"
                        />
                </LinearLayout>



            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/view_line"
                >
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_line_height"
                android:background="@color/white"

                >
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/pay_image_zhifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zhifubao"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_toRightOf="@+id/pay_image_zhifu"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_black_text"
                        android:text="@string/pay_text2"
                        android:textColor="@color/text_black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_gray_text"
                        android:text="@string/pay_explain2"
                        android:textColor="@color/text_gray"
                        />
                </LinearLayout>



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/view_line"
                >
            </View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_line_height"
                android:background="@color/white"

                >
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/pay_image_quan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xueshiquan"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_toRightOf="@+id/pay_image_quan"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_black_text"
                        android:text="@string/pay_text3"
                        android:textColor="@color/text_black"
                        />
                    <TextView
                        android:id="@+id/Hours_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="5dp"
                        android:textSize="15sp"
                        android:textColor="@color/login_color"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@color/login_color"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/comment_pay_cut"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:text="-"
                            android:gravity="center"
                            android:layout_margin ="1dp"
                            />
                        <EditText
                            android:id="@+id/comment_pay_number"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:inputType="number"
                            android:gravity="center"
                            android:background="@color/white"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            />
                        <TextView
                            android:id="@+id/comment_pay_add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="+"
                            android:gravity="center"
                            android:layout_margin="1dp"
                            />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RadioGroup
            android:id="@+id/comment_pay_radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <RadioButton
                android:id="@+id/comment_pay_radio1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pay_line_height"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/view_line"
                >
            </View>
            <RadioButton
                android:id="@+id/comment_pay_radio2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pay_line_height"
                android:layout_gravity="center_vertical"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/view_line"
                >
            </View>
            <CheckBox
                android:id="@+id/comment_pay_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pay_line_height"
                android:layout_gravity="center_vertical"

                />
        </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size"
        android:background="@color/view_line"
        >
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_add_line_height"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/comment_pay_button"
            android:layout_width="@dimen/login_layout_width"
            android:layout_height="@dimen/login_layout_height"
            android:background="@drawable/login_layout"
            android:text="@string/pay_text4"
            android:textColor="@color/text_black"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"

            />
    </RelativeLayout>
</LinearLayout>
