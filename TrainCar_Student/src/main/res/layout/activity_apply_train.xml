<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <cn.guugoo.jiapeistudent.Views.TitleView
        android:id="@+id/activity_apply_train_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.guugoo.jiapeistudent.Views.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/apply_text1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/apply"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_train_text1"
                android:textSize="@dimen/apply_train_text"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_black"
                />
            <View
                android:layout_width="@dimen/view_size"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/view_line"
                >

            </View>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/apply_text2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/learn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_train_text2"
                android:textSize="@dimen/apply_train_text"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_black"
                />
            <View
                android:layout_width="@dimen/view_size"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/view_line"
                >

            </View>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/apply_text3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/inspect"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_train_text3"
                android:textSize="@dimen/apply_train_text"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_black"
                />
            <View
                android:layout_width="@dimen/view_size"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/view_line"
                >

            </View>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/apply_text4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/money"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_train_text4"
                android:textSize="@dimen/apply_train_text"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:textColor="@color/text_black"
                />

        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size"
        android:background="@color/view_line"
        >
    </View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:orientation="vertical"
            android:background="@color/space"
            android:paddingTop="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_text0"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/my_add_line1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/add_text1"
                    android:layout_width="@dimen/my_add_news_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    android:text="@string/add_text1"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size" />
                <EditText
                    android:id="@+id/my_editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/add_text1"
                    android:hint="@string/add_hint1"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/my_text_right_size"
                    android:textSize="@dimen/my_text_size"
                    android:background="@null"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/my_add_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    android:id="@+id/add_text2"
                    android:layout_width="@dimen/my_add_news_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    android:text="@string/add_text2"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size" />

                <RadioGroup
                    android:id="@+id/my_add_radioGroup"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    >
                    <RadioButton
                        android:id="@+id/men"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/my_text_size"
                        android:checked="true"
                        android:text="男"/>
                    <RadioButton
                        android:id="@+id/women"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/my_text_size"
                        android:layout_marginRight="20dp"
                        android:text="女"/>

                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_add_line3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    android:id="@+id/add_text3"
                    android:layout_width="@dimen/my_add_news_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    android:text="@string/add_text3"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size" />
                <EditText
                    android:id="@+id/my_editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/add_text3"
                    android:hint="@string/add_hint3"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/my_text_right_size"
                    android:textSize="@dimen/my_text_size"
                    android:inputType="number"
                    android:background="@null"
                    android:maxLength="11"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_add_line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    android:id="@+id/add_text4"
                    android:layout_width="@dimen/my_add_news_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    android:text="@string/add_text4"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size" />
                <EditText
                    android:id="@+id/my_editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/add_text4"
                    android:hint="@string/add_hint4"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/my_text_right_size"
                    android:textSize="@dimen/my_text_size"
                    android:digits="0123456789X"
                    android:maxLength="18"
                    android:background="@null"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_add_line5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    android:id="@+id/add_text5"
                    android:layout_width="@dimen/my_add_news_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    android:text="@string/add_text5"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size" />
                <EditText
                    android:id="@+id/my_editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/add_text5"
                    android:hint="@string/add_hint5"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/my_text_right_size"
                    android:textSize="@dimen/my_text_size"
                    android:background="@null"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_add_line6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    android:id="@+id/add_text6"
                    android:layout_width="@dimen/my_add_news_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    android:text="@string/add_text6"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size" />
                <ImageView
                    android:id="@+id/add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/arrows_left"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/my_text_right_size"
                    android:textSize="@dimen/my_text_size"
                    />
                <TextView
                    android:id="@+id/my_add_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/add_image"
                    android:hint="@string/add_hint6"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/my_text_size"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Sl_apply_hint"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/add_hint"
                    android:layout_width="@dimen/my_add_news_text_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    android:text="@string/add_text10"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/add_hint"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/apply_package_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="套餐二："
                            android:textSize="@dimen/my_text_size"
                            />
                        <TextView
                            android:id="@+id/apply_package_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/my_text_size"
                            android:text="￥120"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/login_color"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/apply_package_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        />


                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/my_add_line7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <TextView
                    android:id="@+id/add_text7"
                    android:layout_width="@dimen/my_add_news_text_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    android:text="@string/add_text7"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/my_text_size" />
                <EditText
                    android:id="@+id/my_editText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/add_text7"
                    android:hint="@string/add_hint7"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/my_text_right_size"
                    android:textSize="@dimen/my_text_size"
                    android:background="@null"
                    />
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <CheckBox
                    android:id="@+id/my_add_affirm"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="@string/add_text8"
                    android:layout_marginLeft="@dimen/my_add_text_left"
                    />
                <ImageView
                    android:id="@+id/apply_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/rule"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_add_line_height"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:layout_marginBottom="20dp"
                >
                <Button
                    android:id="@+id/add_button"
                    android:layout_width="@dimen/login_layout_width"
                    android:layout_height="@dimen/login_layout_height"
                    android:background="@drawable/login_layout"
                    android:text="@string/add_text9"
                    android:textColor="@color/text_black"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"

                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>