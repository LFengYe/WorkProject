<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MinorActivity.PayActivity">

    <cn.guugoo.jiapeistudent.Views.TitleView
        android:id="@+id/pay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </cn.guugoo.jiapeistudent.Views.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/Pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥4200"
                android:textColor="@color/login_color"
                android:textSize="23sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical|left"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套餐1：C1手动挡"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                />
            <TextView
                android:id="@+id/pay_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一次性霞飞\n\n\n"
                android:textSize="15sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size"
        android:background="@color/view_line"
        >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_line_height"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/pay_image_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/weixin"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    />
                <LinearLayout
                    android:layout_toRightOf="@+id/pay_image_weixin"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_black_text"
                        android:text="@string/pay_text1"
                        android:textColor="@color/text_black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_gray_text"
                        android:text="@string/pay_explain1"
                        android:textColor="@color/text_gray"
                        />
                </LinearLayout>



            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/view_line"
                >
            </View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_line_height"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/pay_image_zhifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zhifubao"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    />
                <LinearLayout
                    android:layout_toRightOf="@+id/pay_image_zhifu"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_black_text"
                        android:text="@string/pay_text2"
                        android:textColor="@color/text_black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/pay_gray_text"
                        android:text="@string/pay_explain2"
                        android:textColor="@color/text_gray"
                        />
                </LinearLayout>



            </RelativeLayout>


        </LinearLayout>
        <RadioGroup
            android:id="@+id/pay_radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <RadioButton
                android:id="@+id/pay_radio1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/pay_line_height"
                android:layout_gravity="center_vertical"
                android:checked="true"
                android:gravity="center"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/view_line"
                >
            </View>

            <RadioButton
                android:id="@+id/pay_radio2"

                android:layout_width="wrap_content"
                android:layout_height="@dimen/pay_line_height"
                android:layout_gravity="center_vertical"

                android:layout_marginTop="1dp"
                />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_size"
        android:background="@color/view_line"
        >
    </View>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_add_line_height"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        >
        <Button
            android:id="@+id/pay_button"
            android:layout_width="@dimen/login_layout_width"
            android:layout_height="@dimen/login_layout_height"
            android:background="@drawable/login_layout"
            android:text="@string/pay_text4"
            android:textColor="@color/text_black"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"

            />
    </RelativeLayout>



</LinearLayout>
