<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_top0"
            android:text="全部"
          style="@style/mefragment_top"/>

        <include layout="@layout/fengeme"/>

        <TextView
            android:id="@+id/tv_top1"
            android:text="已接单"
            style="@style/mefragment_top"/>
        <include layout="@layout/fengeme"/>
        <TextView
            android:id="@+id/tv_top2"
            android:text="进行中"
            style="@style/mefragment_top"/>
        <include layout="@layout/fengeme"/>
        <TextView
            android:id="@+id/tv_top3"
            android:text="已结束"
            style="@style/mefragment_top"/>
    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/btn_small">

        <ImageView
            android:id="@+id/iv_top0"
            style="@style/mefragment_top2"
            />
          <ImageView
              android:id="@+id/iv_top1"
            style="@style/mefragment_top2"
            android:visibility="invisible"
            />
          <ImageView
              android:id="@+id/iv_top2"
            style="@style/mefragment_top2"
            android:visibility="invisible"
            />
          <ImageView
              android:id="@+id/iv_top3"
            style="@style/mefragment_top2"
            android:visibility="invisible"
            />

     </LinearLayout>

</LinearLayout>
