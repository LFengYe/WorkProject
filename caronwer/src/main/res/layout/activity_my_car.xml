<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rebuild_psd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_red"
    android:fitsSystemWindows="true"
    tools:context="cn.com.caronwer.activity.BenefitActivityActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/in_head"
        layout="@layout/action_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_car"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/che"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            />
        <RelativeLayout
            android:id="@+id/rl_cartype"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_click_style"
            >

            <TextView
                android:id="@+id/tv_t1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="车辆类型"
                android:textColor="@color/color_gary_font"
                android:textSize="@dimen/normal_font"/>
            <TextView
                android:id="@+id/tv_cartype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="小面包车"
                android:textColor="@color/color_gary_font"
                android:textSize="@dimen/normal_font"
                android:layout_toRightOf="@id/tv_t1"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/color_white">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_carno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_click_style"
            >

            <TextView
                android:id="@+id/tv_t2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="车牌号"
                android:textColor="@color/color_gary_font"
                android:textSize="@dimen/normal_font"/>
            <TextView
                android:id="@+id/tv_carno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="额B1234214"
                android:textColor="@color/color_gary_font"
                android:textSize="@dimen/normal_font"
                android:layout_toRightOf="@id/tv_t2"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/color_white">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/layout_click_style"
            >

            <TextView
                android:id="@+id/tv_t3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="车主姓名"
                android:textColor="@color/color_gary_font"
                android:textSize="@dimen/normal_font"/>
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="李辉"
                android:textColor="@color/color_gary_font"
                android:textSize="@dimen/normal_font"
                android:layout_toRightOf="@id/tv_t3"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/color_white">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white">

            <Button
                android:visibility="gone"
                android:id="@+id/bt_huan"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_red_style"
                android:text="更换车辆"
                android:textColor="@color/color_gary_font"
                android:textSize="@dimen/normal_font"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
