<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="2000dp"
    android:orientation="vertical"
    tools:context="cn.com.caronwer.activity.LoginActivity">


    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:src="@mipmap/login_exit"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_login22"
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_dialog_bg"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/tv_login22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textColor="#060606"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:id="@+id/ll_validate"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_login22">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/et_account22"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="@dimen/normal_font"
                    android:background="@null"
                    android:hint="@string/hint_input_account"
                    android:textColor="@color/ligh"
                    android:textColorHint="@color/shouyi_grey"
                    />
                <View

                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color_red"/>
                <EditText
                    android:id="@+id/et_validate_code22"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="@dimen/normal_font"
                    android:background="@null"
                    android:hint="@string/hint_validate_code"
                    android:textColor="@color/ligh"
                    android:textColorHint="@color/shouyi_grey"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/color_red"/>

            </LinearLayout>

            <View
                android:layout_width="0.6dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/color_red"
                />
            <TextView
                android:id="@+id/tv_get_code22"
                android:layout_width="70dp"
                android:textSize="@dimen/normal_font"
                android:layout_height="match_parent"
                android:text="@string/get_validate_code"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/shouyi_grey"
                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/rl_password22"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_validate"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp">

            <EditText
                android:id="@+id/et_password22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/normal_font"
                android:background="@null"
                android:hint="@string/hint_set_psd"
                android:inputType="textPassword"
                android:textColor="@color/ligh"
                android:textColorHint="@color/shouyi_grey"
                />

            <ImageView
                android:id="@+id/iv_login_eye22"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@mipmap/biyan"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <Button
            android:id="@+id/bt_ok22"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="@string/ok"
            android:textSize="@dimen/normal_font"
            android:textColor="@color/color_white"
            android:layout_below="@+id/rl_password22"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_button2"
            />

    </RelativeLayout>

    <RelativeLayout

            android:id="@+id/rl_login"
            android:layout_width="280dp"
            android:layout_height="250dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/login_dialog_bg"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="#060606"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"/>
            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="15dp"
                android:background="@null"
                android:textSize="@dimen/normal_font"
                android:hint="@string/hint_input_account"
                android:layout_below="@+id/tv_login"
                android:textColor="@color/ligh"
                android:textColorHint="@color/shouyi_grey"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/et_account"
                android:background="@color/color_red"/>


            <LinearLayout
                android:id="@+id/rl_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/normal_font"
                    android:background="@null"
                    android:hint="@string/hint_input_psd"
                    android:inputType="textPassword"
                    android:textColor="@color/ligh"
                    android:textColorHint="@color/shouyi_grey"
                    />
                <ImageView
                    android:id="@+id/iv_login_eye"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@mipmap/biyan"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <Button
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="@string/login"
                android:textSize="@dimen/normal_font"
                android:background="@drawable/shape_button2"
                android:textColor="@color/color_white"
                android:layout_below="@+id/rl_password"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/normal_font"
                android:padding="5dp"
                android:text="@string/register"
                android:textColor="@color/shouyi_grey"
                android:layout_below="@+id/bt_login"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"/>

            <TextView
                android:id="@+id/tv_forget_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/forget_psd"
                android:textSize="@dimen/normal_font"
                android:textColor="@color/shouyi_grey"
                android:layout_below="@+id/bt_login"
                android:layout_marginLeft="22dp"/>
        </RelativeLayout>


</LinearLayout>
