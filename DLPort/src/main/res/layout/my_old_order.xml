                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中钢"
                            android:textSize="14sp"
                            android:layout_marginLeft="5dp"
                            >
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <Button
